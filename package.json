{
  "name": "smartfit-academy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc worker/index.ts --outDir worker --esModuleInterop --module nodenext --target es2020 --moduleResolution nodenext",
    "build:assets": "vite build",
    "build:worker": "npm run build",
    "build:all": "npm run build:assets && npm run build:worker",
    "build:dev": "cp src/components/auth/clerk.dev.tsx src/components/auth/clerk.tsx && npm run build:all",
    "build:prod": "cp src/components/auth/clerk.prod.tsx src/components/auth/clerk.tsx && npm run build:all",
    "vite": "npx vite",
    "dev": "npm run build:dev && npx wrangler dev --config wrangler.toml --remote",
    "dev:local": "npm run build:dev && npx wrangler dev --config wrangler.toml --local",
    "lint": "eslint .",
    "deploy": "npm run build:prod && wrangler deploy --config wrangler.toml",
    "migrate:d1": "wrangler d1 migrations apply progressive-ai-academy-db --local",
    "migrate:d1:remote": "wrangler d1 migrations apply progressive-ai-academy-db --remote"
  },
  "dependencies": {
    "@clerk/backend": "^1.32.0",
    "@clerk/clerk-react": "^5.31.2",
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@fontsource-variable/geist": "^5.2.6",
    "@fontsource/inter": "^5.2.5",
    "@hono/clerk-auth": "^2.0.0",
    "@hookform/resolvers": "^5.0.1",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-navigation-menu": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@tailwindcss/vite": "^4.1.8",
    "@types/react-syntax-highlighter": "^15.5.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.7.9",
    "lucide-react": "^0.509.0",
    "motion": "^12.16.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.0",
    "react-syntax-highlighter": "^15.6.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250513.0",
    "@eslint/js": "^9.22.0",
    "@shadcn/ui": "^0.0.4",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.3",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "wrangler": "^4.14.4"
  }
}
